            }
        }

        @@media screen and (min-width: 1050px) {
            .performance-statistics {
                font-size: 14px;
            }
        }
    </style>
}
@section Scripts {
    <script src="Scripts/formatDate.js"></script>
    <script>
        function updateTimestamps() {
            $('#localTime').html(new Date().formatDate());

            if (hubIsConnected) {
                serviceHub.getServerTime().done(function (serverTime) {
                    $('#serverTime').html(serverTime.formatDate());
                });
            }
        }

        function updatePerformanceStatistics() {
            if (hubIsConnected)
                serviceHub.getPerformanceStatistics().done(function (statistics) {
                    $("#performanceStatistics").html(statistics);
                });
        }

        function onHubConnected() {
            updatePerformanceStatistics();
            setInterval(updatePerformanceStatistics, 5000);
        }

        $(function () {
            updateTimestamps();
            setInterval(updateTimestamps, 1000);
        });
    </script>
}
<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-5">
        <div class="panel panel-default">
            <div class="panel-heading">Quick Links</div>
            <div class="panel-body">
                <div class="btn-group-vertical btn-block">
                    <button type="button" class="btn btn-primary">Devices</button>
                    <button type="button" class="btn btn-default">Status</button>
                    <button type="button" class="btn btn-default">Schedules</button>
                    <button type="button" class="btn btn-default">Restart Service</button>
                </div>
            </div>
        </div>
        <ul class="list-group">
            <li class="list-group-item"><span class="badge" id="serverTime">@DateTime.UtcNow.ToString(Model.DateTimeFormat)</span>Server&nbsp;Time</li>
            <li class="list-group-item"><span class="badge" id="localTime">@DateTime.UtcNow.ToString(Model.DateTimeFormat)</span>Local&nbsp;Time</li>
            <li class="list-group-item"><span class="badge">@UserInfo.CurrentUserID</span> Current User</li>
        </ul>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-7">
        <div class="panel panel-default">
            <div class="panel-heading">System Health</div>
            <div class="panel-body">
                <pre class="performance-statistics" id="performanceStatistics"><em class="small">Loading...</em></pre>
            </div>
        </div>
    </div>
</div>