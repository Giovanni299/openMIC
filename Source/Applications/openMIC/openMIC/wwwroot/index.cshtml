@using System
@using GSF.Identity
@{
    Layout = "Layout.cshtml";
    ViewBag.Title = "Home";
}
@section StyleSheets {
    <style>
        /* Auto font resize CSS for system health window - targeting fixed 80 char width without wrap and
           allowing for responive screen rearrangement when window is col-**-8 and on the right */
